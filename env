#!/bin/bash

# Friendly reminder:
# If you change this file *after* having run `make`, they will most likely
# won't be taken into account.

export DEBIAN_FRONTEND=noninteractive

export VER_NGINX_DEVEL_KIT=0.2.19
export VER_LUA_NGINX_MODULE=0.9.16
export VER_NGINX=1.9.5
export VER_LUAJIT=2.0.4

export NGINX_DEVEL_KIT="ngx_devel_kit-${VER_NGINX_DEVEL_KIT}"
export LUA_NGINX_MODULE="lua-nginx-module-${VER_LUA_NGINX_MODULE}"

export NGINX_ROOT="/nginx"
export WEB_DIR="${NGINX_ROOT}/html"
export LUAJIT_LIB="/usr/local/lib"
export LUAJIT_INC="/usr/local/include/luajit-2.0"

echo "Imported NGINX ${VER_NGINX} build parameters"

